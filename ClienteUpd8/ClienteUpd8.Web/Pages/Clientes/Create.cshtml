@page
@model ClienteUpd8.Web.Pages.Clientes.CreateModel
@{
    //ViewData["Title"] = "Cadastro do Cliente";
}

<h1>Cadastrar Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CPF" class="control-label"></label>
                <input asp-for="Cliente.CPF" class="form-control" />
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.DataNascimento" class="control-label"></label>
                <input asp-for="Cliente.DataNascimento" class="form-control" />
                <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Sexo" class="control-label"></label>
                <select asp-for="Cliente.Sexo" class="form-control">
                    <option value="M">Masculino</option>
                    <option value="F">Feminino</option>
                </select>
                <span asp-validation-for="Cliente.Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Endereco" class="control-label"></label>
                <input asp-for="Cliente.Endereco" class="form-control" />
                <span asp-validation-for="Cliente.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Estado" class="control-label"></label>
                <input asp-for="Cliente.Estado" class="form-control" />
                <span asp-validation-for="Cliente.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Cidade" class="control-label"></label>
                <input asp-for="Cliente.Cidade" class="form-control" />
                <span asp-validation-for="Cliente.Cidade" class="text-danger"></span>
            </div>
            <div class="form-group"></br></div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-warning" onclick="history.go(-1)">Voltar</a>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
