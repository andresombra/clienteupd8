@page
@using ClienteUpd8.Domain.Entities
@model ClienteUpd8.Web.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-page="./Create">Novo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Sexo</th>
            <th>Estado</th>
            <th>Cidade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Cliente)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.CPF</td>
                <td>@cliente.DataNascimento.ToShortDateString()</td>
                <td>@cliente.Sexo</td>
                <td>@cliente.Estado</td>
                <td>@cliente.Cidade</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@cliente.Id">Editar</a> |
                    <a asp-page="./Delete" asp-route-id="@cliente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
